{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true
  },
  "types": ["vite/client"],
  "typeRoots": ["./node_modules/@types/", "./types"],
  "paths": {
    "@/*": ["src/*"],
    "/#/*": ["types/*"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "types/**/*.ts", "types/**/*.d.ts", "build/**/*.ts", "build/**/*.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
